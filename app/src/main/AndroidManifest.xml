<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aurd_more.yodhha">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="oppo.permission.OPPO_COMPONENT_SAFE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/ic_yodhalogo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:launchMode="singleInstance"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/mainTheme">
        <activity android:name="com.aurd_more.yodhha.NewPasswordActivity"></activity>
        <activity
            android:name="com.aurd_more.yodhha.SafetyMessage"
            android:parentActivityName="com.aurd_more.yodhha.HumanSafety" />
        <activity
            android:name="com.aurd_more.yodhha.Contacts"
            android:parentActivityName="com.aurd_more.yodhha.HumanSafety" />
        <activity android:name="com.aurd_more.yodhha.ActivateScreen" />
        <activity android:name="com.aurd_more.yodhha.SavedContacts" />
        <activity android:name="com.aurd_more.yodhha.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aurd_more.yodhha.Recording_List"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="com.aurd_more.yodhha.Recording"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.aurd_more.yodhha.Recording"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="com.aurd_more.yodhha.HomeScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.aurd_more.yodhha.OtpVerification"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="com.aurd_more.yodhha.ForgetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.aurd_more.yodhha.ForgetPasswordActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="com.aurd_more.yodhha.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.aurd_more.yodhha.LockScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_lock_screen"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aurd_more.yodhha.ProfilePage"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="com.aurd_more.yodhha.HomeScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.aurd_more.yodhha.HumanSafety"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="com.aurd_more.yodhha.HomeScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.aurd_more.yodhha.HomeScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.ACTION_POWER_CONNECTED" /> -->
            <!-- <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" /> -->
            <!-- </intent-filter> -->
        </activity>
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <activity
            android:name="com.aurd_more.yodhha.AntiTheftActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName="com.aurd_more.yodhha.HomeScreen" />
        <activity
            android:name="com.aurd_more.yodhha.AlertScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.aurd_more.yodhha.Register"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="com.aurd_more.yodhha.Login"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme" />
        <activity
            android:name="com.aurd_more.yodhha.Login"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme" />
        <activity android:name="com.aurd_more.yodhha.MainActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.aurd_more.yodhha.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <receiver
            android:name="com.aurd_more.yodhha.MyAdmin"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>

            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/policies" />
        </receiver>
        <receiver
            android:name="com.aurd_more.yodhha.RecieveSms"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.aurd_more.yodhha.Restarter"
            android:enabled="true">
            <intent-filter>
                <action android:name="restartservice" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.aurd_more.yodhha.PowerConnectionReceiver">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.aurd_more.yodhha.SimStateChangedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.SIM_STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.aurd_more.yodhha.backgroundContactService"
            android:enabled="true" />
        <service
            android:name="com.aurd_more.yodhha.MotionDetect"
            android:enabled="true" />
        <service
            android:name="com.aurd_more.yodhha.LocatioinService"
            android:enabled="true" />
        <service
            android:name="com.aurd_more.yodhha.BackgroundService"
            android:enabled="true" />
        <service
            android:name="com.aurd_more.yodhha.MusicService"
            android:enabled="true" />
        <service
            android:name="com.aurd_more.yodhha.CameraService"
            android:enabled="true" />
        <service
            android:name="com.aurd_more.yodhha.CameraBackService"
            android:enabled="true" />
        <service
            android:name="com.aurd_more.yodhha.CameraFrontService"
            android:enabled="true" />
        <service
            android:name="com.aurd_more.yodhha.RecorderService"
            android:enabled="true" />
        <service
            android:name="com.aurd_more.yodhha.AudioRecorderService"
            android:enabled="true" />
        <service
            android:name="com.aurd_more.yodhha.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="com.aurd_more.yodhha.Accessibility"
            android:enabled="true"
            android:exported="true"
            android:label="Yoddha"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/serviceconfig" />
        </service>
    </application>

</manifest>