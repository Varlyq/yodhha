<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:parallax="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:fitsSystemWindows="true"
    android:background="@color/backgroundColor">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:fitsSystemWindows="true"
        android:id="@+id/appbar"
        >

        <androidx.appcompat.widget.Toolbar
            android:id = "@+id/toolbar"
            android:layout_width = "match_parent"
            android:layout_height = "?attr/actionBarSize"
            app:layout_scrollFlags = "snap|enterAlways"
            android:background="@color/backgroundColor">

        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/toolbartitlecolor" />
    </com.google.android.material.appbar.AppBarLayout>





    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/toolbartitlecolor"
                android:fontFamily="Poppins"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/toolbartitlecolor"
                android:fontFamily="Poppins"
                android:text="Create your account"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginBottom="30dp"/>



<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="vertical">-->



<!--               -->
<!--            </LinearLayout>-->

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter your name"
                android:inputType="text"
                android:id="@+id/txtname"
                android:layout_margin="10dp"
                android:background="@drawable/textboxbkgnd"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textColorHint="@color/textsecColor"
                android:paddingLeft="10dp"
                />



            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter email"
                android:inputType="textEmailAddress"
                android:id="@+id/txtemail"
                android:layout_margin="10dp"
                android:background="@drawable/textboxbkgnd"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textColorHint="@color/textsecColor"
                android:paddingLeft="10dp"
                />





            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:hint="Enter your number"
                android:inputType="number"
                android:id="@+id/phonenumber"
                android:layout_margin="10dp"
                android:background="@drawable/textboxbkgnd"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textColorHint="@color/textsecColor"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:hint="Enter your alternate number"
                android:inputType="number"
                android:id="@+id/alternatephonenumber"
                android:layout_margin="10dp"
                android:background="@drawable/textboxbkgnd"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textColorHint="@color/textsecColor"
                />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:paddingLeft="10dp"
                        android:hint="Date of Birth"
                        android:id="@+id/birthdate"
                        android:background="@drawable/textboxbkgnd"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textColorHint="@color/textsecColor"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:clickable="false"
                        android:editable="false"
                        />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_calendar_today_24"
                        android:id="@+id/calender"
                        android:layout_margin="10dp"
                        />
                </LinearLayout>





            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:id="@+id/password"
                android:layout_margin="10dp"
                android:background="@drawable/textboxbkgnd"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textColorHint="@color/textsecColor"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:hint="Enter confirm password"
                android:inputType="textPassword"
                android:id="@+id/confirmpassword"
                android:layout_margin="10dp"
                android:background="@drawable/textboxbkgnd"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textColorHint="@color/textsecColor"
                />



            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="50dp"
                android:id="@+id/btnRegister"
                android:shadowRadius="16"
                android:background="@drawable/btnbg"
                android:text="Register"
                android:textColor="@color/toolbartitlecolor"
                android:elevation="10dp"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Already have an account?"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="17sp"
                    android:gravity="right"
                    android:layout_margin="10dp" />

                <TextView
                    android:gravity="left"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:id="@+id/signinlink"
                    android:textColor="@color/toolbartitlecolor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>
<!--    </RelativeLayout>-->

</androidx.coordinatorlayout.widget.CoordinatorLayout>