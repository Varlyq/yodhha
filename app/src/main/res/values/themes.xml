<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Theftapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purplecolor</item>
        <item name="colorSecondaryVariant">@color/purplecolor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:ambientShadowAlpha">1</item>
        <item name="android:spotShadowAlpha">1</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="mainTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/mainColor</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="collapse"   parent="@android:style/TextAppearance.Medium">

        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

<!--    <style name="secondaryTheme" parent="Theme.Theftapp">-->
<!--    <item name="colorPrimary">@color/mainColor</item>-->
<!--        -->
<!--        -->

<!--    </style>-->

    <style name="AppToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:itemTextAppearance">@style/menu_item_color</item>
    </style>

    <style name="menu_item_color">
        <item name="android:textColor">@color/purplecolor</item>
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="my_dialog_theme" parent="Theme.AppCompat.Light.NoActionBar.FullScreen">
        <item name="colorAccent">@color/mainColor</item>                   <!--header background-->
        <item name="android:windowBackground">@android:color/black</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/mainColor</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

       </style>

    <style name="CalenderDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/mainColor</item>                   <!--header background-->
        <item name="android:windowBackground">@android:color/black</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/mainColor</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/white</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
    </style>

</resources>